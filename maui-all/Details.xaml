<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_all.Details"
             Title="Details">
    <StackLayout x:Name="layout">
        <Label x:Name="nameLabel"></Label>
        <Label x:Name="sexLabel"></Label>
        <Label x:Name="additionalInfoLabel"></Label>

        <Button Text="Wróć" Clicked="Button_Clicked"></Button>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Image Source="dotnet_bot.png" Grid.Row="0" Grid.Column="0" HeightRequest="250"> </Image>
            <Image Source="obraz.jpg" Grid.Row="0" Grid.Column="1" HeightRequest="250"></Image>
            <Image Source="dotnet_bot.png" Grid.Row="0" Grid.Column="2" HeightRequest="250"></Image>
            <Image Source="obraz.jpg" Grid.Row="1" Grid.Column="0" HeightRequest="250"></Image>
            <Image Source="dotnet_bot.png" Grid.Row="1" Grid.Column="1" HeightRequest="250"></Image>
            <Image Source="obraz.jpg" Grid.Row="1" Grid.Column="2" HeightRequest="250"></Image>
        </Grid>
    </StackLayout>
</ContentPage>